<!DOCTYPE html>
<html>
	<head>
	  <title>Citycoasting</title>
	  <%= include_gon %>
	  <script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
	  <%= csrf_meta_tags %>
	  <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-52618812-1', 'auto');
	  ga('send', 'pageview');

	</script>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body data-no-turbolink>
	  
		<%= render 'layouts/header_noscroll' %>
		<%= render 'layouts/header_scroll' %>

		<% unless user_signed_in? %>
		<%= render 'layouts/modal2' %>
    <% end %>
		<%= render 'layouts/modal' %>
		
	  <div class="jumbotron visible-lg">
	    <div class="jumbo_content">
	    	<%# flash.each do |name, msg| %>
					<%#= content_tag(:div, msg, class: "alert alert-info") %>
			<%# end %>
	    	<h1><strong>Explore the World</strong></h1>
	    	<p><strong>Travel recommendations curated by locals and fellow travelers.</strong></p></br>
	    	<%= link_to "Select A Destination", cities_path, class:"btn btn-primary btn-lg" %>
	    </div>
	  </div>
	  
		<div class ="container">
				<br>
	    	<%= render 'home/how_it_works_sect' %><br><br><hr>
				<h1 class ="center">Start your Trip</h1>
				<h3 class="center"><i>“Buy the ticket, take the ride”</i><br>– Hunter S. Thompson</h3><br>
				<!-- Button trigger modal -->
				<%= render 'home/cities_sect' %><br><br><hr>
				<h1 class="center">Featured Places</h1>
				<h3 class="center">See what's trending all over the world.</h3>
				<div id="stamps" class="row">	
  				<%= render 'stamps/stamps' %>
				</div>
				<%= will_paginate @stamps %>
				<%= link_to "Keep Discovering", cities_path, class:"btn btn-lg btn-primary btn-block" %>
				<br><br>



		</div>

	</body>
</html>
