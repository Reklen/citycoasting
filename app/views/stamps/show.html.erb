
<div class = "row">
	<div class = "col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div id ="map_canvas" style="width: 100%; height: 20%">
			</div>
			<div class="panel-heading center">
				<%= image_tag @stamp.image.url(:large) %>
			</div>
			<div class="panel-body center">
				<p>
				  <strong>Description:</strong>
				  <%= @stamp.description %>
				</p>
				<p><strong><%= @stamp.user.name if @stamp.user %></strong><br>
					<%= @stamp.name if @stamp.name %></p>

				<%= render 'stamps/neighborhood_key', :stamp => @stamp %><br>

				<div class = "pull-left">
        	<%= render 'stamps/pricerange_key', :stamp => @stamp %>
        </div>
        <div class = "pull-right">
          <%= render 'stamps/category_key', :stamp => @stamp %>
        </div><br>
        <% if (current_user && @stamp.user == current_user) %>
					
					<%= link_to edit_stamp_path(@stamp) do %>
          	<span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %> |

					<%= link_to 'Back', stamps_path %> |

					<%= link_to @stamp, method: :delete, data: { confirm: 'Are you sure?' } do %>
	        	<span class="glyphicon glyphicon-trash"></span>Delete
	        <% end %><br>
        <% end %>
			</div>
		</div>
	</div>
</div>