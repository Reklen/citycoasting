<div id="stamps" class="transitions-enabled">
  <% @stamps.each do |stamp| %>
    <div class="box panel panel-default center">
      <%= link_to image_tag(stamp.image.url), stamp %>
      <div class = "panel-body">
        <%= stamp.description %><br>
        <%= stamp.user.username if stamp.user %>
        <% if stamp.user == current_user %>
          <div class ="actions">
            <%= link_to edit_stamp_path(stamp) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit |
            <% end %>
            <%= link_to stamp, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>