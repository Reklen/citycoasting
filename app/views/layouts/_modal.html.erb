
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1 class="modal-title" id="myModalLabel"><strong>citycoasting</strong></h1>
            <h4>Sign up to build and share unique trips.<h4>
        <br><br><br><br>
        <br><br><br><br>
      </div>
      <div class="modal-footer center">
        <%= link_to user_omniauth_authorize_path(:facebook) do %>
          <div class="btn btn-primary btn-block btn-social btn-facebook">
            <i class="fa fa-facebook"></i> Sign in with Facebook
          </div>
         <% end %> 
         <br>
        <%= link_to new_user_registration_path do %>
           <div class="btn btn-primary btn-block btn-social">
            <i class="fa fa-envelope-o"></i> Sign up with Email<br>
          </div>
        <% end %> <hr>

        <strong>Already have an account?<strong><br><br>
         <%= link_to "Log In", new_user_session_path, class: "btn btn-default btn-block" %>
      </div>
    </div>
  </div>
</div>