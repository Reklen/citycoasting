<h1>Listing stamps</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @stamps.each do |stamp| %>
      <tr>
        <td><%= image_tag stamp.image.url(:medium) %></td>
        <td><%= stamp.description %></td>
        <td><%= stamp.user.email if stamp.user %></td>
        <td><%= link_to 'Show', stamp %></td>
        <% if stamp.user == current_user %>
          <td><%= link_to 'Edit', edit_stamp_path(stamp) %></td>
         <td><%= link_to 'Destroy', stamp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Stamp', new_stamp_path %>
<% end %>
